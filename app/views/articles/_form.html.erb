<%= render 'shared/errors', obj: @article %>

<div class='row'>
  <div class='col-md-12'>
    <%= form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

      <div class='form-group row'>
        <div class='col-sm-2 col-form-label-lg' style='text-align: right; font-weight: bold;'>
          <%= f.label :title %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :title, class: 'form-control form-control-lg', placeholder: "Title of the article.", autofocus: true %>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-sm-2 col-form-label col-form-label-lg' style='text-align: right; font-weight: bold;'>
          <%= f.label :description %> <br/>
        </div>
        <div class='col-sm-8'>
          <%= f.text_area :description, rows: 10, class: "form-control form-control-lg", placeholder: "Body of article." %>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-sm-12' style='text-align: center;'>
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>
    <div align='center'>
      [ <%= link_to 'Cancel and go back to article listing', articles_path %> ]
    </div>

  </div>
</div>
