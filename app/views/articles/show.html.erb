<br>
<h1 align='center'><strong> Title: <%= @article.title %> </strong></h2>

<div class='row'>
  <div class='offset-md-2 col-md-8'>
    <div class='card'>
      <div class='card-heading'>
        <h4 class='card-header'><strong>Description</strong></h4>
        <div class='card-body'>
          <%= simple_format(@article.description) %>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
</div>
<div class='article-actions center'>
  <%= link_to 'Edit this article', edit_article_path(@article), class: 'btn btn-xs btn-primary' %>
  <%= link_to 'Delete this article', article_path(@article), method: :delete,
                data: {confirm: 'Are you sure you want to delete this article?'}, class: 'btn btn-md btn-danger' %>
  <%= link_to 'Back to article listing', articles_path, class: 'btn btn-xs btn-success' %>
</div>
