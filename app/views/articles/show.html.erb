<br>
<h1 align='center'><strong> Title: <%= @article.title %> </strong></h1>

<div class='row'>
  <div class='offset-md-2 col-md-8'>
    <div class='card'>
      <div class='card-heading'>
        <div class='card-header' style='overflow: hidden;'>
          <h4 style='float:left'><strong> Description </strong> </h4>
          <p style='float:right'>
             created by <%= @article.user.username if @article.user %>
             <%= link_to gravatar_for(@article.user, size: 40), user_path(@article.user) %>
          </p>
        </div>
        <div class='card-body'>
          <%= simple_format(@article.description) %>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
</div>
<div class='article-actions center'>
  <%= link_to 'Edit this article', edit_article_path(@article), class: 'btn btn-xs btn-primary' %>
  <%= link_to 'Delete this article', article_path(@article), method: :delete,
                data: {confirm: 'Are you sure you want to delete this article?'}, class: 'btn btn-md btn-danger' %>
  <%= link_to 'Back to article listing', articles_path, class: 'btn btn-xs btn-success' %>
</div>
