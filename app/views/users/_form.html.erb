<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class='col'>
    <%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

      <div class='form-group row'>
        <div class='col-sm-2 col-form-label-lg' style='text-align: right; font-weight: bold;'>
          <%= f.label :username %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :username, class: 'form-control form-control-lg', placeholder: "Enter a username", autofocus: true %>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-sm-2 col-form-label col-form-label-lg' style='text-align: right; font-weight: bold;'>
          <%= f.label :email %> <br/>
        </div>
        <div class='col-sm-8'>
          <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Enter your email address" %>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-sm-2 col-form-label col-form-label-lg' style='text-align: right; font-weight: bold;'>
          <%= f.label :password %> <br/>
        </div>
        <div class='col-sm-8'>
          <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Choose a password" %>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-sm-12' style='text-align: center;'>
          <%= f.submit 'Sign up', class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>
    <div align='center'>
      [ <%= link_to 'Cancel and go back to article listing', articles_path %> ]
    </div>

  </div>
</div>
