<% if obj.errors.any? %>
  <div class='row'>
    <div class='offset-md-2 col-md-8'>
      <div class='card' style='background-color: #e04343;'>
        <div class='card-heading'>
          <h2 class='card-header' style='color: white;'>
            <%= pluralize(obj.errors.count, 'error') %>
            prohibited this article from being saved:
          </h2>
          <div class='card-body'>
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li style='color: white;s'><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<br>
